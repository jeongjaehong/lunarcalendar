<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="300dip"
	android:layout_height="fill_parent">

	<ScrollView android:id="@+id/ScrollView01"
		android:layout_width="fill_parent" android:layout_height="wrap_content">

		<FrameLayout android:id="@+id/FrameLayout01"
			android:layout_width="fill_parent" android:layout_height="wrap_content">

			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="vertical" android:padding="10dip"
				android:layout_width="fill_parent" android:layout_height="wrap_content">

				<TextView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:text="제목또는 내용을 입력하십시오."

					android:textSize="16sp" />

				<EditText android:id="@+id/keyword1" android:layout_width="fill_parent"
					android:selectAllOnFocus="true" android:inputType="text"
					android:layout_height="wrap_content" android:text="" />

				<Spinner android:id="@+id/spin_searchop"
					android:layout_height="wrap_content" android:layout_width="150dip"
					android:layout_gravity="right" />

				<EditText android:id="@+id/keyword2" android:layout_width="fill_parent"
					android:selectAllOnFocus="true" android:inputType="text"
					android:layout_height="wrap_content" android:text="" />

				<Button android:id="@+id/btn_search" android:text="검색"
					android:layout_height="wrap_content" android:layout_width="100dip"
					android:layout_gravity="right" />
			</LinearLayout>
		</FrameLayout>
	</ScrollView>
</LinearLayout>