<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/schedule_group" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:orientation="horizontal"
	android:padding="5sp">

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:minHeight="35dip"
		android:maxHeight="45dip" android:orientation="horizontal">
		<TextView android:id="@+id/schedule_date"
			android:layout_width="wrap_content" android:paddingLeft="30sp"
			android:textSize="11sp" android:gravity="center"
			android:layout_height="fill_parent" android:paddingRight="10dip" />
		<TextView android:id="@+id/schedule_title"
			android:layout_width="wrap_content" android:layout_height="fill_parent"
			android:textSize="16sp" android:maxLines="2"
			android:gravity="center_vertical" 
			android:ellipsize="end"
			android:paddingRight="10dip" />
		<ImageView android:layout_height="wrap_content" android:id="@+id/clock_flags"
			android:src="@drawable/clock" android:adjustViewBounds="true"
			android:layout_width="24dip" android:maxWidth="24dip"
			android:maxHeight="24dip" android:scaleType="fitCenter"
			android:layout_gravity="center_vertical" android:visibility="gone" />
		<ImageView android:layout_height="wrap_content" android:id="@+id/glass_flags"
			android:src="@drawable/glass" android:adjustViewBounds="true"
			android:layout_width="24dip" android:maxWidth="24dip"
			android:maxHeight="24dip" android:scaleType="fitCenter"
			android:layout_gravity="center_vertical" android:visibility="gone" />
	</LinearLayout>
</RelativeLayout>
