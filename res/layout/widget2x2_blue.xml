<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/widget" android:background="@drawable/widget_background_blue"
	android:clickable="true" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:layout_gravity="center">

	<LinearLayout android:id="@+id/content"
		android:layout_marginLeft="15dip" android:layout_marginTop="9dip"
		android:layout_marginRight="5dip" android:layout_marginBottom="5dip"
		android:orientation="vertical" android:gravity="top"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<LinearLayout android:id="@+id/layout_phone"
				android:orientation="horizontal" android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<ImageView android:id="@+id/widget_icon" android:src="@android:drawable/stat_notify_sync"
					android:scaleType="fitXY" android:layout_width="24dp"
					android:layout_height="24dp" />
				<TextView android:id="@+id/text_dday" android:text="@string/empty_str"
					android:textSize="14sp" android:textStyle="bold" android:gravity="center"
					android:layout_width="fill_parent" android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout android:id="@+id/layout_message"
				android:orientation="horizontal" android:layout_width="fill_parent"
				android:layout_height="wrap_content">

				<TextView android:id="@+id/text_title" android:text="@string/empty_str"
					android:textSize="14sp" android:gravity="center" android:maxLines="3"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" />
				<TextView android:id="@+id/text_title2" android:text="@string/empty_str"
					android:textSize="12sp" android:gravity="left" android:maxLines="5"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"  android:visibility="gone"/>
			</LinearLayout>
			<LinearLayout android:id="@+id/layout_data"
				android:orientation="horizontal" android:layout_width="fill_parent"
				android:layout_height="wrap_content">

				<TextView android:id="@+id/text_contents" android:text="@string/empty_str"
					android:textSize="14sp" android:gravity="center"
					android:layout_width="fill_parent" android:layout_height="fill_parent" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>